  <script>
    const startDate = new Date("2023-12-25"); // Ngày bắt đầu yêu
    const today = new Date();
    const timeDiff = today - startDate;
    const days = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
    document.getElementById("loveDays").textContent = `${days} ngày 💕`;
  </script>
